<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="20210206-04-locations" author="saphka">
        <createTable tableName="locations">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="location_timestamp" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="varchar(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="sender_id" type="int">
                <constraints nullable="false" referencedTableName="users" referencedColumnNames="id" deleteCascade="true" foreignKeyName="locations_sender_id_fk_users"/>
            </column>
            <column name="receiver_id" type="int">
                <constraints nullable="false" referencedTableName="users" referencedColumnNames="id" deleteCascade="true" foreignKeyName="locations_receiver_id_fk_users"/>
            </column>
        </createTable>
        <createIndex tableName="locations" indexName="locations_receiver_id_location_timestamp_index">
            <column name="receiver_id"/>
            <column name="location_timestamp"/>
        </createIndex>
        <createIndex tableName="locations" indexName="locations_sender_id_location_timestamp_index">
            <column name="sender_id"/>
            <column name="location_timestamp"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>